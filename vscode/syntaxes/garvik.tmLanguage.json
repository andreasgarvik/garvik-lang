{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Garvik",
	"patterns": [
		{
			"include": "#number" 
		},
		{
			"include": "#arrow" 
		},
		{
			"include": "#true" 
		},
		{
			"include": "#false" 
		},
		{
			"include": "#keyword"
		},
		{
			"include": "#string"
		},
		{ 
			"include": "#paren" 
		},
		{ 
			"include": "#list" 
		},
		{ 
			"include": "#struct" 
		}
	],
	"repository": {
		"number": {
      "match": "[0-9]+",
      "name": "constant.numeric"
		},
		"arrow": {
      "match": "->",
      "name": "keyword.control.garvik"
		},
		"true": {
			"match": "true",
			"name": "constant.language.boolean.true"
		},
		"false":{
			"match": "false",
			"name": "constant.language.boolean.false"
		},
		"keyword": {
			"patterns": [{
				"name": "keyword.control.garvik",
				"match": "\\b(if|then|else|let|in|len)\\b"
			}]
		},
		"string": {
			"name": "string.quoted.double.garvik",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.garvik",
					"match": "\\\\."
				}
			]
		},
		"paren": {
      "begin": "\\(",
      "end": "\\)",
      "beginCaptures": {
        "0": { "name": "punctuation.paren.open" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.paren.close" }
      },
      "name": "expression.group",
      "patterns": [{ "include": "#expression" }]
		},
		"list": {
      "begin": "\\[",
      "end": "\\]",
      "beginCaptures": {
        "0": { "name": "punctuation.paren.open" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.paren.close" }
      },
      "name": "expression.group",
      "patterns": [{ "include": "#expression" }]
		},
		"struct": {
      "begin": "\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.paren.open" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.paren.close" }
      },
      "name": "expression.group",
      "patterns": [{ "include": "#expression" }]
		}
	},
	"scopeName": "source.garvik"
}